{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single"
    ]
  },
  "plugins": [
    "jest"
  ],
  "ignorePatterns": [
    "/dist/*",
    "/jest.config.js",
    "/babel.config.js"
  ]
}